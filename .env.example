# Application Settings
APP_NAME=gate-access-controller
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database Settings
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql
SQLITE_DATABASE_PATH=./gate_access.db

# PostgreSQL Settings (if DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=gateadmin
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=gate_access_db


# Gate Webhook Settings
GATE_WEBHOOK_URL=http://your-gate-controller.local/api/open
GATE_WEBHOOK_TOKEN=your-webhook-token
GATE_WEBHOOK_TIMEOUT=10
GATE_OPEN_DURATION_SECONDS=5

# Security Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
TRUSTED_HOSTS=["localhost","127.0.0.1"]
RATE_LIMIT_PER_MINUTE=60
LINK_CODE_LENGTH=8

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/gate_access.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Frontend Settings
VITE_API_URL=http://localhost:8000
VITE_APP_TITLE=Gate Access Controller
VITE_ENABLE_ANALYTICS=false