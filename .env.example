# Application Settings
APP_NAME=gate-access-controller
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True
# CRITICAL: SECRET_KEY must be set to a fixed value in production!
# This key is used to encrypt sensitive data like OIDC client secrets.
# If not set or if it changes, encrypted data cannot be decrypted.
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database Settings
DATABASE_TYPE=postgresql  # Options: sqlite, postgresql (postgresql recommended for Docker deployments)
SQLITE_DATABASE_PATH=./gate_access.db

# PostgreSQL Settings (if DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=gateadmin
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=gate_access_db


# Gate Webhook Settings
GATE_WEBHOOK_URL=http://your-gate-controller.local/api/open
GATE_WEBHOOK_TOKEN=your-webhook-token
GATE_WEBHOOK_TIMEOUT=10
GATE_OPEN_DURATION_SECONDS=5

# URL Settings
# Admin URL for configuration and management interface (optional, e.g., admin.example.com)
ADMIN_URL=
# Links URL for public access links (optional, e.g., x.com)
LINKS_URL=

# Security Settings
# Add both admin and links URLs to CORS_ORIGINS if using separate domains
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
# TRUSTED_HOSTS: List of allowed host headers. Use ["*"] to allow all hosts (recommended for Docker deployments)
# Add both admin and links URLs if using separate domains (e.g., ["admin.example.com", "x.com"])
TRUSTED_HOSTS=["*"]
RATE_LIMIT_PER_MINUTE=60
LINK_CODE_LENGTH=8

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/gate_access.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# OpenID Connect / OAuth2 Settings (Optional)
# Set OIDC_ENABLED=True to enable OpenID Connect authentication
OIDC_ENABLED=False
# OIDC Issuer URL (e.g., https://auth.example.com or https://accounts.google.com)
OIDC_ISSUER=
# OIDC Client ID (obtain from your identity provider)
OIDC_CLIENT_ID=
# OIDC Client Secret (obtain from your identity provider)
OIDC_CLIENT_SECRET=
# OIDC Redirect URI - must match the callback URL registered with your provider
# For local development: http://localhost:3000/auth/callback
# For production: https://your-admin-domain.com/auth/callback
OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
# OIDC Scopes - comma-separated list of scopes to request
OIDC_SCOPES=openid,profile,email

# Session Settings
# SESSION_SECRET_KEY will be auto-generated if not provided
SESSION_SECRET_KEY=
SESSION_COOKIE_NAME=gate_access_session
SESSION_MAX_AGE=86400
SESSION_SECURE=False
SESSION_HTTPONLY=True
SESSION_SAMESITE=lax

# Frontend Settings
VITE_API_URL=http://localhost:8000
VITE_APP_TITLE=Gate Access Controller
VITE_ENABLE_ANALYTICS=false